<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F3FC">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/welcome_student"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello, Student!"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Next Session"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="8dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_next_session"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#d9ede2"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/next_session_subject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mathematics"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#333333"/>
                <TextView
                    android:id="@+id/next_session_tutor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="with Mr. Caleb"
                    android:textSize="14sp"
                    android:textColor="#555555"
                    android:layout_marginBottom="12dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/next_session_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="14 Nov 2025"
                        android:textColor="#555555"
                        android:textStyle="bold"
                        android:drawableStart="@drawable/calendar"
                        android:drawableTint="@color/primary_color"
                        android:drawablePadding="8dp"
                        android:layout_marginEnd="16dp"/>
                    <TextView
                        android:id="@+id/next_session_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4:00 PM"
                        android:textColor="#555555"
                        android:textStyle="bold"
                        android:drawableStart="@drawable/time"
                        android:drawableTint="@color/primary_color"
                        android:drawablePadding="8dp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/no_next_session"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You have no upcoming sessions.\nBook a course below!"
            android:textAlignment="center"
            android:padding="20dp"
            android:background="@drawable/rounded_border_gray"
            android:textColor="#888888"
            android:visibility="gone"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Featured Tutors"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewFeaturedTutors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Explore Courses"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewCourses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>